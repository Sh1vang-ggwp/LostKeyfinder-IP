<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_gravity="top"
        android:orientation="horizontal"
        android:id="@+id/locationTitle"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:textSize="16sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/location"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <com.google.android.gms.maps.MapView
            android:id="@+id/googlemapview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/locationTitle"/>
        <FrameLayout
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="85dp">
            <Button
                android:layout_gravity="end"
                android:id="@+id/googletoCurrentLocation"
                android:background="@drawable/myloc"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="35dp"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:layout_gravity="bottom|center_horizontal"
                    android:id="@+id/googlelocationHis"
                    android:background="@drawable/textgraybg"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/locaiton_history"
                    android:layout_marginStart="70dp"
                    android:layout_marginEnd="70dp"/>
            </FrameLayout>
        </FrameLayout>
    </FrameLayout>
</LinearLayout>
