<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:textColor="#fff"
        android:id="@+id/tv_flash_close"
        android:background="@drawable/flash_text_shape"
        android:paddingTop="@dimen/flash_text_padding_top"
        android:paddingBottom="@dimen/flash_text_padding_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:paddingStart="@dimen/flash_text_padding_left"
        android:paddingEnd="@dimen/flash_text_padding_left"/>
    <TextView
        android:textColor="#fff"
        android:id="@+id/tv_flash_auto"
        android:paddingTop="@dimen/flash_text_padding_top"
        android:paddingBottom="@dimen/flash_text_padding_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:paddingStart="@dimen/flash_text_padding_left"
        android:paddingEnd="@dimen/flash_text_padding_left"
        android:layout_marginStart="10dp"/>
    <TextView
        android:textColor="#fff"
        android:id="@+id/tv_flash_open"
        android:paddingTop="@dimen/flash_text_padding_top"
        android:paddingBottom="@dimen/flash_text_padding_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:paddingStart="@dimen/flash_text_padding_left"
        android:paddingEnd="@dimen/flash_text_padding_left"
        android:layout_marginStart="10dp"/>
    <TextView
        android:textColor="#fff"
        android:id="@+id/tv_flash_keep_open"
        android:paddingTop="@dimen/flash_text_padding_top"
        android:paddingRight="@dimen/flash_text_padding_left"
        android:paddingBottom="@dimen/flash_text_padding_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:paddingStart="@dimen/flash_text_padding_left"
        android:layout_marginStart="10dp"/>
</LinearLayout>
